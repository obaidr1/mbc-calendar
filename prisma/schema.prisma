datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
  location    String
  bannerUrl   String?
  creatorName String
  creatorEmail String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 